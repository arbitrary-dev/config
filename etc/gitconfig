[alias]
  ls = "!f() { git ls-tree --full-tree -r HEAD | cut -d'	' -f2 | less -iSXFR; }; f"

  lg = log --graph --abbrev-commit --decorate --date=format:'%m-%d-%Y %H:%M' --format=format:'%C(cyan)%h%C(reset) %C(red)%ad (%ar)%C(reset)%C(green)%d%C(reset)%n'\
'        %C(reset)%s %C(dim yellow)%an%+N%C(reset)' --exclude refs/stash --all
  lcm = log --decorate --graph --oneline --cherry-mark --boundary

  ignore = update-index --assume-unchanged
  unignore = update-index --no-assume-unchanged
  ls-ignore = !git ls-files -v `git rev-parse --show-toplevel` | grep ^[a-z]

  df = diff -B -D
  dfn = "!f() { \
    local size=($(stty size)); \
    git df --name-only $* | sed '/.*CVS.*/d;s/.*\\///' | column -c ${size[1]}; \
  }; f"
  dfp = "!f() { \
    local size=($(stty size)); \
    git df --name-only $* | sed 's/\\/.*//' | uniq | column -c ${size[1]}; \
  }; f"

  dfc = "!git df --cached"
  dfnc = "!git dfn --cached"
  dfpc = "!git dfp --cached"

  dff = "!f() { git diff --find-copies-harder -B -C --ignore-all-space --ignore-blank-lines ${@: -2} -- `git diff --name-only ${@: -2} | grep -v CVS`; }; f"
  dffs = "!f() { git diff --stat=162 --find-copies-harder -B -C --ignore-all-space --ignore-blank-lines ${@: -2} -- `git diff --name-only ${@: -2} | grep -v CVS`;  }; f"

  cp = cherry-pick
  cpc = cherry-pick --continue

  cm = commit -m
  cam = commit -am
  cf = commit --fixup
  caf = commit -a --fixup

  r = rebase
  ri = rebase -i
  rc = rebase --continue
  rt = rebase --edit-todo

  b = "!f() { git blame --abbrev=6 -s -L ${@:1} | less -iSXF; }; f"
  bs = bisect
  mt = mergetool
  co = checkout
  show-no = show --pretty="" --name-only
  bdel = "!f() { git push --delete origin $1; git branch -D $1; }; f"

[core]
  editor = vim
  pager = "less -iSXFR"
[push]
  default = simple
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
[pager]
  status = true

[diff]
  noprefix = true
[color "interactive"]
  prompt = yellow reverse
[rebase]
  autosquash = true
[credential]
  helper = cache
